{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "coverage/", "*.min.js"],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-var": "error",
    "prefer-const": "warn",
    "eqeqeq": ["error", "smart"],
    "no-undef": "off"
  }
}
